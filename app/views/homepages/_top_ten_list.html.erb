<section class="top-ten__list-container">
  <h2 class="top-ten__header">
    Top <%= action_name.capitalize %>s
  </h2>

  <% works = Work.top_ten("#{action_name}") %>

  <ul class="list-group top-ten__list">
    <% if works %>
      <% works.each do |work| %>
        <li class="list-group-item">
          <h4>
            <%= link_to "#{work.title}", work_path(work) %>
            <small class="top-ten__creator"><%= work.creator %></small>
          </h4>
          <p><%= work.votes.count %> votes</p>
        </li>
      <% end %>
    <% end %>
  </ul>

</section>
