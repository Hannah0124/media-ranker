<h2>List of Users 
  <span class="user-counts">#<%= @users.count %> users</span>
</h2>


<table class="table">

  <thead>
    <tr>
      <th>Username</th>
      <th>Votes</th>
      <th>Joined</th>
    </tr>
  </thead>

  <tbody>
    
    <% @users && @users.each do |user| %>
      <tr>
        <td><%= link_to "#{user.name}", user_path(user.id) %></td>
        <td><%= user.votes.count %></td>
        <td><%= user.created_at.strftime("%b %d, %Y") %></td>
      </tr>
    <% end %>
    
  </tbody>
  
</table>

<%= link_to "Back to Media List", root_path, class: "btn btn-secondary" %>