<h2>User Summary: <%= link_to "#{@user.name}", user_path(@user) %></h2>
<p>Joined site <%= @user.created_at.strftime("%b %d, %Y") %></p>

<section class="user-votes__container">
  <h3 class="user-votes__header">Votes</h3>
  <table class="table">
    <thead>
      <tr>
        <th>Media Title</th>
        <th>Created By</th>
        <th>Published</th>
        <th>Category</th>
        <th>Voted On</th>
      </tr>
    </thead>
    <tbody>
        <% if @user.votes %>
          <% @user.votes.each do |vote| %>
          <tr>
            <td><%= link_to "#{vote.work.title}", work_path(vote.work_id) %></td>
            <td><%= vote.work.creator %></td>
            <td><%= vote.work.publication_year %></td>
            <td><%= vote.work.category %></td>
            <td><%= vote.created_at.strftime("%b %d, %Y") %></td>
          </tr>
          <% end %>
        <% end %>
        
    </tbody>
  </table>
</section>

